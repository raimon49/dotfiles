[ui]
username = raimon <raimon49@hotmail.com>
editor = vim

[extensions]
color =
rebase =
graphlog =
pager =

[pager]
pager = lv
quiet = True
attend = annotate, cat, diff, export, glog, log, qdiff, help, slog

[alias]
slog = log --template '{rev} {node|short}: {date|isodate} ({author|user}): {desc|firstline}\n'
l = slog
clean = !$HG status --no-status --unknown -0 | xargs -0 rm
