set number
set cursorline
set incsearch
set ignorecase
set smartcase
set scrolloff=5

nnoremap n nzz
nnoremap N Nzz
nnoremap * *zz
nnoremap # #zz
nnoremap g* g*zz
nnoremap g# g#zz
nnoremap <CR> o<Esc>

nnoremap tn :<C-u>tabn<CR>
nnoremap tp :<C-u>tabp<CR>

inoremap <C-A> <Esc>0i
inoremap <C-E> <Esc>$a
inoremap <C-F> <Esc><Right>a
inoremap <C-B> <Esc>i
inoremap <C-D> <Esc><Right>xi

" vim:set ft=vim:
